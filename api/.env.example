# AutoBK API 
# Server
PORT=3000
API_INTERNAL_BASE=http://localhost:3000
API_BROWSER_BASE=http://localhost:3000


# Database (MySQL/MariaDB)
# Format: mysql://USER:PASS@HOST:PORT/DBNAME
DATABASE_URL=mysql://<db_user>:<db_pass>@<db_host>:3306/AutoBk

# REDIS 
REDIS_ENABLE=false
REDIS_URL=redis://localhost:6379
CACHE_TTL_DEVICES_SUMMARY=300

# Auth
JWT_SECRET=please-change-me-to-a-long-random-string-of-32+chars
JWT_TTL_SECONDS=3600

# Defaults
ADMIN_EMAIL=email@email.com
ADMIN_NAME=admin
ADMIN_PASSWORD=pleaseChangeMe

# Files
BACKUP_FILES_DIR=/opt/autobk/backups

# Logging
LOG_LEVEL=info

# Docs
ENABLE_SWAGGER=false

# Agent
# Directory where the autobk.ini file is located
AGENT_DIR=/opt/autobk/

# Webhook (daily reports/notifications)
WEBHOOK_URL=
WEBHOOK_TIMEOUT_MS=5000
